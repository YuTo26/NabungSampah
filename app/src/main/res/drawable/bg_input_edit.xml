<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- kondisi ketika fokus terarahkan ke text editor -->
    <!-- warna berubah menjadi abu-abu muda transparan -->
    <item
        android:drawable="@drawable/bg_input_two"
        android:state_focused="true"
        />
    <!-- kondisi ketika ditekan terarahkan ke text editor -->
    <!-- warna berubah menjadi abu-abu muda transparan -->
    <item
        android:drawable="@drawable/bg_input_two"
        android:state_pressed="true"
        />
    <!-- kondisi ketika dipilih terarahkan ke text editor -->
    <!-- warna berubah menjadi abu-abu muda transparan -->
    <item
        android:drawable="@drawable/bg_input_two"
        android:state_selected="true"
        />
    <!-- kondisi ketika text editor tidak di pilih -->
    <!-- warna berubah menjadi putih (sesuai warna bg input 1 ) -->
    <item
        android:drawable="@drawable/bg_input_one"
        />
</selector>